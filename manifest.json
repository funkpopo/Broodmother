{
  "manifest_version": 3,
  "name": "Broodmother",
  "version": "0.1.1",
  "description": "A browser extension that uses AI to translate text.",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "sidebar_action": {
    "default_title": "Broodmother Sidebar",
    "default_panel": "sidepanel.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "broodmother@ai-translator.extension"
    }
  }
}
